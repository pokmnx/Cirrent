<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView3"
        android:text="Sorry, the device didn't register with the cloud."
        android:textSize="18sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center" />

    <TextView
        android:text="Now you'll need to join the Device's Wi-Fi network to get it on your local network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:layout_marginTop="24dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ioshome"
            android:id="@+id/imageView2"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/right"
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/iossettings"
            android:id="@+id/imageView4"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/right"
            android:id="@+id/imageView5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ioswifi"
            android:id="@+id/imageView6"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:text="Press the Home button, then go to Settings > Wi-Fi, and after making sure the Wi-Fi is turned on, choose the wcm-softap network when it appears"
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Once you've joined the 'wcm-softap' network switch back to this app by tapping its icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView7"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:text="Current network:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/currentNetwork"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textAlignment="center" />


</RelativeLayout>