<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:id="@+id/deviceImageView"
        android:scaleType="fitCenter" />

    <TextView
        android:text="Device Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/deviceName"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/deviceImageView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:id="@+id/connectAutoGroup"
        android:layout_above="@+id/or_textview"
        android:layout_marginBottom="8dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/connectAutoButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#0000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/autoconnectlabel"
            android:text="Connect Automatically with"
            android:textAlignment="center"
            android:layout_gravity="top|center"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#00ACFF" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/xfinity"
            android:id="@+id/providerImageView"
            android:layout_gravity="bottom|center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/autbuttonlabel"
            android:layout_marginTop="32dp"
            android:scaleType="fitCenter"
            />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/connectManualButton"
        android:id="@+id/or_textview"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        />

    <Button
        android:text="Connect Manually"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/connectManualButton"
        android:background="#00ACFF" />


</RelativeLayout>